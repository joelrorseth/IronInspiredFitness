<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exercise_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mainBackgroundColor"
    tools:context="com.joelrorseth.ironinspiredfitness.ExerciseDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TODO: Remove sample text for generic placeholders -->
            <TextView
                android:id="@+id/exercise_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:text="Sumo Deadlift"
                android:clickable="false"
                android:textColor="@color/darkGrayColor"/>

            <ImageView
                android:id="@+id/exercise_detail_imageview"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/exercise_detail_name"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/exercise_detail_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Difficulty: Medium"
                android:clickable="false"
                android:textColor="@color/darkGrayColor"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/exercise_detail_imageview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/exercise_detail_motion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Motion: Pull"
                android:clickable="false"
                android:textColor="@color/darkGrayColor"
                android:layout_below="@+id/exercise_detail_difficulty"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/exercise_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@id/exercise_detail_motion"
                android:textSize="18sp"
                android:text="Load a barbell with an appropriate amount of weight and place it on the floor infront of you. Stand with a wide stance (past shoulder length) and bend over and place your hands on the bar with an overhand or mixed grip. Make sure your back is straight and your chest is up. Pull the weight up off the ground, thrusting the bar once at full extension. Lower weight back down keeping the bar as close to you as possible. Repeat"
                android:clickable="false"
                android:textColor="@color/darkGrayColor"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
